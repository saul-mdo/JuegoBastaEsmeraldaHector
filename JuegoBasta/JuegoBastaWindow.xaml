<Window x:Class="JuegoBasta.JuegoBastaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoBasta"
        mc:Ignorable="d"
        Title="JuegoBastaWindow" Height="450" Width="800">
    
    <DockPanel>
        <Button Command="{Binding JugarCommand}" CommandParameter="{Binding ElementName=txt, Path=Text}" DockPanel.Dock="Bottom" Width="200" Margin="5">BASTA</Button>
        <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top" Text="{Binding Letra}"></TextBlock>
        <TextBlock FontFamily="Century Gothic" FontSize="20" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Text="{Binding Mensaje}"></TextBlock>
        <Border Margin="10" Padding="5" BorderBrush="Red" BorderThickness="2" DockPanel.Dock="Left">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="20" Margin="5" Text="{Binding Jugador1}"/>
                <TextBlock Text="{Binding PuntajeJugador1}"></TextBlock>
            </StackPanel>
        </Border>

        <Border Margin="10" Padding="5" BorderBrush="Red" BorderThickness="2" DockPanel.Dock="Right">
            <StackPanel>
                <TextBlock Margin="5" HorizontalAlignment="Center" FontSize="20" Text="{Binding Jugador2}"/>
                <TextBlock Text="{Binding PuntajeJugador2}"></TextBlock>
            </StackPanel>
        </Border>

        <StackPanel>
            <StackPanel >
                <GroupBox>
                    <StackPanel Orientation="Horizontal" >
                        <TextBox Name="txt" Width="50" Margin="5" Text="{Binding respuestas.Nombre}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas.Lugar}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas.Animal}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas.Color}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas.Comida}"></TextBox>
                    </StackPanel>
                </GroupBox>
                <DataGrid ItemsSource="{Binding RespuestaJugador1}" Height="200" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width=".2*" Header="Nombre" Binding="{Binding Nombre}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Lugar" Binding="{Binding Lugar}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Animal" Binding="{Binding Animal}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Color" Binding="{Binding Color}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Comida" Binding="{Binding Comida}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
            <StackPanel >
                <GroupBox >
                    <StackPanel Orientation="Horizontal" >
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas2.Nombre}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas2.Lugar}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas2.Animal}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas2.Color}"></TextBox>
                        <TextBox Width="50" Margin="5" Text="{Binding respuestas2.Comida}"></TextBox>
                    </StackPanel>
                </GroupBox>
                <DataGrid ItemsSource="{Binding RespuestaJugador2}" Height="200" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width=".2*" Header="Nombre" Binding="{Binding Nombre}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Lugar" Binding="{Binding Lugar}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Animal" Binding="{Binding Animal}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Color" Binding="{Binding Color}"></DataGridTextColumn>
                        <DataGridTextColumn Width=".2*" Header="Comida" Binding="{Binding Comida}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>

    </DockPanel>
</Window>
