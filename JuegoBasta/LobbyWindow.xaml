<Window x:Class="JuegoBasta.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoBasta"
        mc:Ignorable="d"
        Title="Sala de Espera" Height="300" Width="500" Icon="images/basta.ico">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#FFE78D8D"/>
            <GradientStop Color="#FFE73E19" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <StackPanel Margin="10">
        <Label Margin="20" DockPanel.Dock="Top" FontFamily="/JuegoBasta;component/Fonts/#Chalk Stick" HorizontalAlignment="Center" FontSize="32">SALA DE ESPERA</Label>
        <TextBlock FontFamily="Century Gothic" Margin="40,0" FontSize="25">Usuario: <TextBlock FontWeight="Bold" FontFamily="Century Gothic" Text="{Binding Jugador1}"></TextBlock></TextBlock>
        <TextBlock HorizontalAlignment="Center" FontFamily="Century Gothic" Margin="40,10" FontStyle="Italic" FontSize="16" TextWrapping="Wrap" Text="{Binding Mensaje}"/>
    </StackPanel>
</Window>
